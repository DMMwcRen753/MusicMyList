<div class='container'>
  <h3 class= "pt-4"><%= @user.name %>さんの会員詳細</h3>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <table class='table table-borderless'>
        <thead>
          <tr>
            <th style="background-color:rgba(130,0,0,0.8);", class="text-white">会員ID</th>
            <td style="background-color:rgba(255,255,255,0.5);"><%= @user.id %></td>
          </tr>
          <tr>
            <th style="background-color:rgba(130,0,0,0.8);", class="text-white">名前</th>
            <td style="background-color:rgba(255,255,255,0.5);"><%= @user.name %></td>
          </tr>
          <tr>
            <th style="background-color:rgba(130,0,0,0.8);", class="text-white">メールアドレス</th>
            <td style="background-color:rgba(255,255,255,0.5);"><%= @user.email %></td>
          </tr>
          <tr>
            <th style="background-color:rgba(130,0,0,0.8);", class="text-white">会員ステータス</th>
            <td style="background-color:rgba(255,255,255,0.5);">
              <% if @user.status %>
            <b class="text-secondary">退会</b>
              <% else %>
            <b class="text-success">有効</b>
            <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %></td>
            <td><%= link_to "投稿一覧を見る", admin_scores_path(@user.id), class: 'btn btn-primary' %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>