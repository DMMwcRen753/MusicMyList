<div class="container">
  <h3 class="text-center">マイリスト名</h3>
  <h3 class="text-center"><%= @mylist.name %></h3>
  <div class="row">
    <div class="table-responsive text-center">
      <table class="table table-bordered">
        <thead  style="background-color:rgba(130,0,0,0.8);", class="text-white">
          <tr>
            <th>楽曲名</th>
            <th>アーティスト名</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody style="background-color:rgba(255,255,255,0.5);">
          <% @mylist_score.each do |mylist_score| %>
            <tr>
              <td>
                <%= link_to score_path(mylist_score.score.id) do %>
                  <u><%= mylist_score.score.name %></u>
                <% end %>
              </td>
              <td><%= mylist_score.score.artist %></td>
              <td class=<%= "favorite-" + mylist_score.score.id.to_s %> >
                <%= render "public/favorites/btn", score: mylist_score.score %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>