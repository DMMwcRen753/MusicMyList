<div class="container">
  <% if @mylist.errors.any? %>
    <%= @mylist.errors.count %>件のエラーが発生しました
    <ul>
      <% @mylist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <h2>マイリスト作成</h2>
    <div class="col-sm-12">
      <%= form_with model: @mylist,　url: mypage_path(mypage), local: true do |f| %>
        <div class="form-group row">
          <%= f.label :マイリスト名, class: 'col-md-4' %>
          <%= f.text_field :name, class: 'col-md-8' %>
        </div>
        <div class="form-group row">
          <%= f.submit :新規作成, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>