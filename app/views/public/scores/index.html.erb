<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="row mt-3 p-1"  style="background-color:rgba(130,0,0,0.8);">
          <h3 class="" style="color:rgba(225,255,255,1);">投稿一覧（全<%= @scores_count %>件）</h3>
      </div>
      <div class="col-md-9">
        <div class="rounded-circle text-center ml-auto" style="background-color: pink; width: 50px; height: 50px" >
          <%= link_to "新規投稿", new_score_path, class: "text-muted lead" %>
        </div>
      </div>
      <div class="row d-flex flex-wrap" style="background-color:rgba(255,255,255,0.5);">
        <% @scores.each do |score| %>
          <div class="col-3 flex-wrap ml-5">
            <%= link_to score_path(score), class: 'nav-link text-dark' do %>
              <%= image_tag score.get_image(150, 150) %>
              <p class="text-left"><%= score.name %></p>
              <p class="text-left">¥<%= score.artist %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
