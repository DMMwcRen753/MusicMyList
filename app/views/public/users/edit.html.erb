<div class="col-5">
 <h2 class= "text-center mt-3 mb-4 font-weight-bold">会員情報編集</h2>
</div>

   <% if @user.errors.any? %>
     <%= @user.errors.count %>件のエラーが発生しました
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
   <% end %>

<div class= "container">
     <div class="col-sm-6">
        <%= form_with model: @user, url: info_path, method: :patch do |f| %>
          <div class="form-group row">
            <%= f.label "会員名", class: 'col-md-2'%>
            <%= f.text_field :name %>

          <div class="form-group row">
            <%= f.label "メールアドレス", class: 'col-md-4' %><br />
            <%= f.email_field :email, class: 'col-md-8' %>
          </div>

          <div class="form-group row">
            <%= f.submit "変更内容を保存", class: 'mt-3 btn btn-success' %>
          </div>

          <div class="form-group row">
            <%= link_to "退会する", unsubscribe_path, class: 'mt-3 btn btn-danger' %>
          </div>
        <% end %>
     </div>
</div>
