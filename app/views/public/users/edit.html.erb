
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<div class= "container">
  <h2 class= "text-center mt-3 mb-4 font-weight-bold">会員情報編集</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto text-center">
      <%= form_with model: @user, url: info_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label "会員名" %><br />
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email %>
        </div>
        <div class="form-group">
          <%= f.submit "変更内容を保存", class: 'mt-3 btn btn-success' %>
        </div>
        <div class="form-group">
          <%= link_to "退会する", unsubscribe_path, class: 'mt-3 btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
